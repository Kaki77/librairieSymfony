{% extends 'base.html.twig' %}

{% block title %}Edit Password{% endblock %}

{% block body %}

{{form_start(form)}}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2>Modifier Mot de Passe</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{form_label(form.password)}}
                {{form_widget(form.password)}}
                <br/>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button class="btn btn-success">Changer le mot de passe</button>
            </div>
        </div>
    </div>
{{form_end(form)}}

{% endblock %}